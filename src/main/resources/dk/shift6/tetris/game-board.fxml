<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:id="root"
      fx:controller="dk.shift6.tetris.TetrisController" stylesheets="@style.css" styleClass="custom-pane">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="TOP_RIGHT" spacing="2">
        <Label fx:id="exitLabel" text="x" style="-fx-font-size: 16px;"  onMouseClicked="#handleExitButtonClick" />
    </HBox>

    <AnchorPane xmlns:fx="http://javafx.com/fxml">
        <Canvas fx:id="gameCanvas" width="200" height="400" />
    </AnchorPane>

    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="scoreLabel" text="Score: 0" style="-fx-font-size: 16px;" />
        <Label fx:id="levelLabel" text="Level: 1" style="-fx-font-size: 16px;" />
        <Label fx:id="linesClearedLabel" text="Lines Cleared: 0" style="-fx-font-size: 16px;" />
        <!-- Add more labels or controls as needed -->
    </HBox>

</VBox>
