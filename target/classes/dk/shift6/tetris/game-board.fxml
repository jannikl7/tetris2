    <Label fx:id="scoreHeaderLabel" text="score" style="-fx-font-size: 16px;" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="CENTER"  />
    <Label fx:id="levelHeaderLabel" text="level" style="-fx-font-size: 16px;"  alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="CENTER" />
    <Label fx:id="scoreLabel" text="0" style="-fx-font-size: 16px;" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="CENTER"  />
    <Label fx:id="levelLabel" text="1" style="-fx-font-size: 16px;" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="CENTER"  />
