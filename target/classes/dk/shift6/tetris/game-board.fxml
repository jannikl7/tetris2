<GridPane alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:id="root" fx:controller="dk.shift6.tetris.TetrisController" stylesheets="@style.css" styleClass="custom-pane">
    <columnConstraints>
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="50" />
