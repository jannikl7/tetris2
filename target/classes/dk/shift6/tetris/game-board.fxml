    <Label fx:id="exitLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT"  text="x" style="-fx-font-size: 16px;" onMouseClicked="#handleExitButtonClick" />
